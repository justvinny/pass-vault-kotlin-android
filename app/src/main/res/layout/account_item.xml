<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_platform"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/content_platform_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_platform"
        app:tint="?colorPrimary" />

    <TextView
        android:id="@+id/text_view_platform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_platform"
        app:layout_constraintStart_toEndOf="@id/icon_platform"
        app:layout_constraintTop_toTopOf="@id/icon_platform"
        tools:text="Amazon" />

    <ImageView
        android:id="@+id/icon_username"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_username_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_platform"
        app:srcCompat="@drawable/ic_user"
        app:tint="?colorPrimary" />

    <TextView
        android:id="@+id/text_view_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_username"
        app:layout_constraintStart_toEndOf="@id/icon_username"
        app:layout_constraintTop_toTopOf="@id/icon_username"
        tools:text="john.doe" />

    <ImageView
        android:id="@+id/icon_maximize_account"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/content_maximize_account"
        app:layout_constraintBottom_toBottomOf="@id/icon_platform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_platform"
        app:srcCompat="@drawable/ic_maximize_account"
        app:tint="?colorPrimary" />

    <ImageView
        android:id="@+id/icon_copy_password"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/content_copy_password"
        app:layout_constraintBottom_toBottomOf="@id/icon_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon_username"
        app:srcCompat="@drawable/ic_copy"
        app:tint="?colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_copy_password"
        app:srcCompat="@drawable/horizontal_line" />
</androidx.constraintlayout.widget.ConstraintLayout>